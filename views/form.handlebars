{{#if username}}
<div class="bg-success p-4 mb-4 d-flex justify-content-between align-items-center" style="--bs-bg-opacity: .5;">
	<h1>Bienvenido {{username}}</h1>
	<form action="/" method="POST">
		<div>
			<input class="btn btn-success" type='submit' value='Salir' />
		</div>
	</form>
</div>
<section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
	<h2 class="text-primary">Ingrese Producto</h2>
	<form id="form-add-product">
		<div class='mb-3'>
			<label class='form-label fw-bold' for='name'>Nombre</label>
			<input id="name-product" class="form-control" type='text' name='name' />
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='price'>Precio</label>
			<input id="price-product" class="form-control" type='number' name='price' />
		</div>
		<div class='mb-3'>
			<label class='form-label fw-bold' for='img'>Foto URL</label>
			<input id="img-product" class="form-control" type='url' name='img' />
		</div>
		<div class='mb-3'>
			<input class="btn btn-success" type='submit' value='Enviar' />
		</div>
	</form>
</section>
<section class="p-4 bg-secondary" style="--bs-bg-opacity: .5;">
	<h2 class="text-primary">Vista de Productos</h2>
	<table class="table table-dark">
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Precio</th>
				<th>Foto</th>
			</tr>
		</thead>
		<tbody id="table-products"></tbody>
	</table>
	<h2 id="no-products" class="bg-light p-4 text-danger">No hay productos listados</h2>
</section>
<section class="p-4 bg-secondary mt-4" style="--bs-bg-opacity: .5;">
	<h2 class="text-primary mb-4">Centro de Mensajes</h2>
	<hr>
	<div id="table-chat" class="my-4"></div>
	<form id="chat-form" class="form-inline">
		<input id="user-email" class="form-control w-50 my-2 mr-2" type="mail" id="usermail" placeholder="Ingresa tu email" required>
		<input type="text" id="firstname" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu nombre" required/>
        <input type="text" id="lastname" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu apellido" required/>
        <input type="text" id="age" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu edad" required/>
        <input type="text" id="alias" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu alias" required/>
		<input id="chat-message" class="form-control mb-3" type="text" name="chatmessage"
			placeholder="Ingresá un mensaje..." required>
		<button class="btn btn-primary" type="submit">Enviar</button>
	</form>
</section>
{{else}}
<div class="bg-danger p-4 mb-8 d-flex justify-content-between align-items-center" style="--bs-bg-opacity: .5;">
	<h1 class="text-white">No se encontró ningún usuario</h1>
	<form action="/" method="POST">
		<div>
			<input class="btn btn-warning" type='submit' value='Volver al SignIn' />
		</div>
	</form>
</div>
{{/if}}
